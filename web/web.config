<?xml version="1.0" encoding="UTF-8"?>
<!-- IIS configuration for Flutter Web App -->
<!-- Fix Cross-Origin-Opener-Policy for Google Sign-In -->
<configuration>
  <system.webServer>
    <httpProtocol>
      <customHeaders>
        <!-- Allow Google Sign-In popup to work -->
        <add name="Cross-Origin-Opener-Policy" value="same-origin-allow-popups" />
        <add name="Cross-Origin-Embedder-Policy" value="unsafe-none" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>

